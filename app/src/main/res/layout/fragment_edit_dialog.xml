<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:configChanges="orientation|screenSize"
    tools:context=".Controller.Fragment.EditDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg_10"
            android:padding="@dimen/pad_10"
            android:text="@string/new_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg_5"
            android:hint="@string/new_edit_text"
            android:padding="@dimen/pad_10"
            android:textSize="20sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/contentt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg_10"
            android:padding="@dimen/pad_5"
            android:text="@string/new_content"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg_5"
            android:hint="@string/new_edit_text"
            android:padding="@dimen/pad_10"
            android:textSize="20sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/new_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg_10"
            android:padding="@dimen/pad_5"
            android:text="@string/new_date"
            android:textSize="20sp"
            android:textStyle="bold" />

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/new_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg_10"
            android:padding="@dimen/pad_5"
            android:text="@string/new_time"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/new_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg_10"
            android:padding="@dimen/pad_10"
            android:text="@string/new_state"
            android:textSize="20sp"
            android:textStyle="bold" />

<RadioGroup
    android:id="@+id/radio_state_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mrg_10"
        android:text="@string/todo" />

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/doing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mrg_10"
        android:text="@string/doing" />

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mrg_10"
        android:text="@string/done" />
</RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity= "right">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialog_ok_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mrg_10"
                android:text="@string/ok"
                app:icon="@drawable/ic_check" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialog_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mrg_10"
                android:text="@string/cancel"
                app:icon="@drawable/ic_close" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>