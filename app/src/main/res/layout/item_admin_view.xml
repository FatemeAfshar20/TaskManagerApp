<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/beauty_yellow"
    android:layout_margin="@dimen/mrg_5"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_prof"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/img_admin_prof"
        android:layout_margin="@dimen/mrg_5"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_prof"
        android:layout_toRightOf="@+id/img_prof"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/mrg_5"
        tools:text="Kamran" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_menu"
        android:layout_margin="@dimen/mrg_5"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/num_task_user"
        style="@style/AdminItemTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_toEndOf="@+id/img_prof"
        android:layout_toRightOf="@+id/img_prof"
        android:layout_marginTop="@dimen/mrg_10"
        android:text="@string/number_task"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/date_membership"
        style="@style/AdminItemTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/mrg_10"
        android:text="@string/date_membership"
        />

</RelativeLayout>