<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/so_light_gray"
    tools:context=".Controller.Fragment.EditFragment"
    android:orientation="vertical"
    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/mrg_10"
       >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_test"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_show"
        style="@style/TextStyle.TextStyleBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2DCD9D9"
        android:textStyle="bold"
        android:text="@string/task_title"
        android:layout_margin="@dimen/mrg_5"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/content_show"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_title"
        android:hint="@string/no_content"
        android:layout_margin="@dimen/mrg_5"
        android:padding="15sp"
        android:textColor="@color/black"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:weightSum="2"
       >

       <com.google.android.material.textview.MaterialTextView
           style="@style/TextStyle"
           android:id="@+id/date_show"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="@string/task_title"
           android:padding="15sp"
           android:gravity="center"
           android:background="#F2DCD9D9" />

       <com.google.android.material.textview.MaterialTextView
           style="@style/TextStyle"
           android:id="@+id/time_show"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="@string/task_title"
           android:padding="15sp"
           android:gravity="center"
           android:background="#F2DCD9D9"
           />
   </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        style="@style/TextStyle.TextStyleBold"
        android:id="@+id/state_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_title"
        android:background="@color/beauty_yellow"
        android:textStyle="italic|bold"
        />

</LinearLayout>